{
    "name": "harvest-dashboard",
    "version": "1.0.0",
    "main": "index.js",
    "author": "Vincent",
    "scripts": {
        "network": "docker network create harvest.dashboard",
        "client:dev:install": "docker-compose --env-file .env -f docker/docker-compose.client.yml -f docker/docker-compose.client.dev.yml build",
        "client:dev:up": "docker-compose --env-file .env -f docker/docker-compose.client.yml -f docker/docker-compose.client.dev.yml up",
        "client:dev:down": "docker-compose --env-file .env -f docker/docker-compose.client.yml -f docker/docker-compose.client.dev.yml down",
        "client:dev:uninstall": "docker-compose --env-file .env -f docker/docker-compose.client.yml -f docker/docker-compose.client.dev.yml down --rmi all",
        "client:prod:install": "docker-compose --env-file .env -f docker/docker-compose.client.yml -f docker/docker-compose.client.prod.yml build",
        "client:prod:up": "docker-compose --env-file .env -f docker/docker-compose.client.yml -f docker/docker-compose.client.prod.yml up -d",
        "client:prod:down": "docker-compose --env-file .env -f docker/docker-compose.client.yml -f docker/docker-compose.client.prod.yml down",
        "client:prod:uninstall": "docker-compose --env-file .env -f docker/docker-compose.client.yml -f docker/docker-compose.client.prod.yml down --rmi all",
        "api:dev:install": "docker-compose --env-file .env -f docker/docker-compose.api.yml -f docker/docker-compose.api.dev.yml build",
        "api:dev:up": "docker-compose --env-file .env -f docker/docker-compose.api.yml -f docker/docker-compose.api.dev.yml up",
        "api:dev:down": "docker-compose --env-file .env -f docker/docker-compose.api.yml -f docker/docker-compose.api.dev.yml down",
        "api:dev:uninstall": "docker-compose --env-file .env -f docker/docker-compose.api.yml -f docker/docker-compose.api.dev.yml down --rmi all",
        "api:prod:install": "docker-compose --env-file .env -f docker/docker-compose.api.yml -f docker/docker-compose.api.prod.yml build",
        "api:prod:up": "docker-compose --env-file .env -f docker/docker-compose.api.yml -f docker/docker-compose.api.prod.yml up",
        "api:prod:down": "docker-compose --env-file .env -f docker/docker-compose.api.yml -f docker/docker-compose.api.prod.yml down",
        "api:prod:uninstall": "docker-compose --env-file .env -f docker/docker-compose.api.yml -f docker/docker-compose.api.prod.yml down --rmi all",
        "format-code": "prettier --write --ignore-unknown .",
        "heroku-prebuild": "cd api && npm install",
        "start": "cd api && npm run prod",
        "start:client:dev": "cd client && npm run start",
        "start:api:dev": "cd api && npm run dev",
        "build:client": "cd client && npm run prod"
    },
    "devDependencies": {
        "prettier": "2.4.1"
    }
}
